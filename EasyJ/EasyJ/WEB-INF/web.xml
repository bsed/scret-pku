<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
                         "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
 <listener>
  <listener-class>easyJ.http.config.ConfigManager</listener-class>
 </listener>
 <servlet>
  <servlet-name>DynamicServlet</servlet-name>
  <servlet-class>easyJ.http.servlet.DynamicServlet</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>debugjsp</servlet-name>
  <description>Added to compile JSPs with debug info</description>
  <servlet-class>org.apache.jasper.servlet.JspServlet</servlet-class>
  <init-param>
   <param-name>classdebuginfo</param-name>
   <param-value>true</param-value>
  </init-param>
  <load-on-startup>3</load-on-startup>
 </servlet>
 <servlet-mapping>
  <servlet-name>DynamicServlet</servlet-name>
  <url-pattern>*.do</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>debugjsp</servlet-name>
  <url-pattern>*.jsp</url-pattern>
 </servlet-mapping>
 <welcome-file-list>
  <welcome-file>Login.jsp</welcome-file>
 </welcome-file-list>
 <taglib>
  <taglib-uri>/WEB-INF/easyJ.tld</taglib-uri>
  <taglib-location>/WEB-INF/easyJ.tld</taglib-location>
 </taglib>
 <login-config>
  <auth-method>BASIC</auth-method>
 </login-config>
</web-app>

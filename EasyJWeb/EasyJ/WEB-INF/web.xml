<?xml version="1.0" encoding="UTF-8"?>

<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

	<listener>
		<listener-class>easyJ.http.config.ConfigManager</listener-class>
	</listener>
	<servlet>
		<servlet-name>BuildFileModel</servlet-name>
		<servlet-class>servlet.BuildFileModel</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>GetFileModels</servlet-name>
		<servlet-class>servlet.GetFileModels</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UpdateModel</servlet-name>
		<servlet-class>servlet.UpdateModel</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BuildFileModel</servlet-name>
		<url-pattern>/servlet/BuildFileModel</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GetFileModels</servlet-name>
		<url-pattern>/servlet/GetFileModels</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UpdateModel</servlet-name>
		<url-pattern>/servlet/UpdateModel</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>DynamicServlet</servlet-name>
		<servlet-class>easyJ.http.servlet.DynamicServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>debugjsp</servlet-name>
		<servlet-class>
			org.apache.jasper.servlet.JspServlet
		</servlet-class>
		<init-param>
			<param-name>classdebuginfo</param-name>
			<param-value>true</param-value>
		</init-param>
		<load-on-startup>3</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>DynamicServlet</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>debugjsp</servlet-name>
		<url-pattern>*.jsp</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>Login.jsp</welcome-file>
	</welcome-file-list>
	<jsp-config>
		<taglib>
			<taglib-uri>/WEB-INF/easyJ.tld</taglib-uri>
			<taglib-location>/WEB-INF/easyJ.tld</taglib-location>
		</taglib>
	</jsp-config>
	<login-config>
		<auth-method>BASIC</auth-method>
	</login-config>

	<filter>
		<filter-name>struts2</filter-name>
		<filter-class>
			org.apache.struts2.dispatcher.FilterDispatcher
		</filter-class>
		<!-- 打开这段注释会出错,具体见http://netliving.javaeye.com/blog/200188 
			<init-param>
			<param-name>config</param-name>
			<param-value>/WEB-INF/classes/struts.xml</param-value>
			</init-param>
		-->
		<!-- 指定初始加载的action package包 
			<init-param>
			<param-name>actionPackages</param-name>
			<param-value></param-value>
			</init-param>
		-->
	</filter>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>*.st</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>*.action</url-pattern>
	</filter-mapping>
</web-app>
